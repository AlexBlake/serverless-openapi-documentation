{
  "name": "serverless-openapi-documentation",
  "version": "0.0.0",
  "description": "Serverless 1.0 plugin to generate OpenAPI V3 documentation from serverless configuration",
  "main": "dist/index.js",
  "author": "Abilio Henrique <abilio.henrique@temando.com>",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --config ./.jestrc",
    "lint": "eslint src",
    "test:watch": "yarn test -- -i --watch",
    "release:npm": "cd dist && npm publish",
    "docs": "typedoc --out ./dist/docs --target es6 --readme README.md",
    "build": "node scripts/package"
  },
  "devDependencies": {
    "@types/node": "^7.0.12",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^19.0.2",
    "serverless": "^1.9.0",
    "ts-jest": "^19.0.6",
    "ts-node": "^3.0.2",
    "tslint": "^4.5.1",
    "tslint-eslint-rules": "^3.5.1",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.2",
    "@types/fs-promise": "^1.0.1",
    "@types/js-yaml": "^3.5.29",
    "bluebird": "^3.5.0",
    "fs-promise": "^2.0.2",
    "js-yaml": "^3.8.2",
    "lutils": "^1.2.5"
  }
}
